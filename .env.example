# GeneDose.ai Environment Configuration

# Application Settings
ENVIRONMENT=development
DEBUG=true
SECRET_KEY=your-super-secret-key-change-in-production
ALLOWED_ORIGINS=http://localhost:3000,https://genedose.ai

# Database Configuration
DATABASE_URL=postgresql://genedose:password@localhost:5432/genedose
REDIS_URL=redis://localhost:6379

# Authentication
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=30

# File Processing
MAX_FILE_SIZE_MB=5
UPLOAD_DIR=./uploads
TEMP_DIR=./temp

# External Services
OPENAI_API_KEY=your-openai-api-key-for-rag
ANTHROPIC_API_KEY=your-anthropic-api-key

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Monitoring
PROMETHEUS_ENABLED=true
SENTRY_DSN=your-sentry-dsn

# Security
CORS_ORIGINS=http://localhost:3000
RATE_LIMIT_PER_MINUTE=60

# Genomics Data
REFERENCE_GENOME=GRCh38
CPIC_DATA_DIR=./data/cpic
ALLELE_DEFINITION_DIR=./data/alleles

# Development Only
SKIP_AUTH=false
MOCK_ANALYSIS=false
